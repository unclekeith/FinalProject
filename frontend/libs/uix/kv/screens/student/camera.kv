<CameraScreen>:
    
    MDBoxLayout:
        orientation: 'horizontal'
        pos_hint: {"top": .99}
        size_hint_y: None
        height: dp(50)
        padding: dp(5), dp(5), 0, dp(5)
        spacing: 13

        MDFabButton:
            id: full
            style: "small"
            icon: 'arrow-left'
            on_release:
                root.manager.back()

                
    BoxLayout:
        orientation: 'vertical'

        Camera:
            id: camera_widget
            resolution: (640, 480)  # Set a reasonable resolution
            play: True  # Start camera immediately

        # Label:
        #     size_hint: None, None
        #     size: self.texture_size[0], 50
            # text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            adaptive_height: True
            id: image_preview_container

    MDFabButton:
        id: capture
        on_release: root.capture()
        pos_hint: {'center_x': 0.5, "center_y": .2}
        icon: "camera"
        style: "standard"
